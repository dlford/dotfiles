[
    /*
    // all ctrl/alt shortcuts must be explicitly assigned to neovim, e.g.:
    {
        "command": "vscode-neovim.send",
        // the key sequence to activate the binding
        "key": "ctrl+h",
        // don't activate during insert mode
        "when": "editorTextFocus && neovim.mode != insert",
        // the input to send to Neovim
        "args": "<C-h>"
    },
    */

    // Tab navigation
    {
        "command": "workbench.action.previousEditor",
        "key": "t h",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.nextEditor",
        "key": "t l",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.closeActiveEditor",
        "key": "t d",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.reopenClosedEditor",
        "key": "t shift+d",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.files.newUntitledFile",
        "key": "t n",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.moveEditorRightInGroup",
        "key": "t m",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.moveEditorLeftInGroup",
        "key": "t shift+m",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.moveEditorToRightGroup",
        "key": "t t",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.moveEditorToLeftGroup",
        "key": "t shift+t",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    
    // Split navigation
    {
        "command": "workbench.action.focusLeftGroup",
        "key": "alt+h",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.focusRightGroup",
        "key": "alt+l",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.focusAboveGroup",
        "key": "alt+k",
        "when": "neovim.mode != insert && editorTextFocus"
    },
    {
        "command": "workbench.action.focusBelowGroup",
        "key": "alt+j",
        "when": "neovim.mode != insert && editorTextFocus"
    },

    // File Explorer
    {
        "command": "workbench.view.explorer",
        "key": "ctrl+o",
        "when": "neovim.mode != insert && viewContainer.workbench.view.explorer.enabled",
    },
    {
        "command": "workbench.action.files.openFile",
        "key": "ctrl+o",
        "when": "explorerViewletFocus"
    },
    {
        "command": "workbench.action.files.openFileFolder",
        "key": "ctrl+shift+o",
        "when": "explorerViewletFocus"
    },
    {
        "key": "enter",
        "command": "workbench.action.tasks.runTask",
        "args": "openFileAndCloseSidebar",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsFolder && !inputFocus"
    },
    {
        "key": "v",
        "command": "workbench.action.tasks.runTask",
        "args": "openFileVerticalAndCloseSidebar",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsFolder && !inputFocus"
    },
    /*
    TODO: m for menu
    {
        "key": "m",
        "command": "workbench.action.toggleMenuBar",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    */
    
    // Terminal
    {
        "command": "workbench.action.terminal.toggleTerminal",
        "key": "ctrl+t"
    },
    
    // Focus mode
    {
        "command": "workbench.action.toggleZenMode",
        "key": "ctrl+z"
    },
    
    // Sidebar and Panel
    {
        "command": "workbench.action.tasks.runTask",
        "args": "closeSidebarAndPanel",
        "key": "ctrl+x",
        "when": "!filesExplorerFocus"
    },
    {
        "command": "workbench.action.closeSidebar",
        "key": "escape",
        "when": "sideBarFocus"
    },
    {
        "command": "workbench.action.closePanel",
        "key": "escape",
        "when": "panelFocus && !terminalFocus"
    },
    
    // Git
    {
        "command": "workbench.view.scm",
        "key": "ctrl+g",
        "when": "workbench.scm.active"
    },

    
    // Search
    {
        "command": "-vscode-neovim.ctrl-f",
        "key": "ctrl+f",
        "when": "editorTextFocus && neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert'"
    },
    {
        "command": "explorer.openToSide",
        "key": "ctrl+v",
        "when": "inQuickOpen"
    },
    {
        "command": "workbench.action.terminal.searchWorkspace",
        "key": "ctrl+f",
        "when": "neovim.mode != 'insert'"
    },
]