{
    "version": "2.0.0",
    "tasks": [
        // Sidebar and Panel
        {
            "label": "closeSidebar",
            "command": "${command:workbench.action.closeSidebar}"
        },
        {
            "label": "closePanel",
            "command": "${command:workbench.action.closePanel}"
        },
        {
            "label": "closeSidebarAndPanel",
            "dependsOrder": "parallel",
            "dependsOn": [
                "closeSidebar",
                "closePanel",
            ]
        },
        
        // File Explorer
        {
            "label": "openFile",
            "command": "${command:explorer.openAndPassFocus}"
        },
        {
            "label": "openFileVertical",
            "command": "${command:explorer.openToSide}"
        },
        {
            "label": "openFileAndCloseSidebar",
            "dependsOrder": "parallel",
            "dependsOn": [
                "openFile",
                "closeSidebar",
            ]
        },
        {
            "label": "openFileVerticalAndCloseSidebar",
            "dependsOrder": "parallel",
            "dependsOn": [
                "openFileVertical",
                "closeSidebar",
            ]
        },
    ]
}