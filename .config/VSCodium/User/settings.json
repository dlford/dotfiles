/*
    Plugins:
    - vscodevim/vim
    - wayou/TODO Highlight
    - GitHub/GitHub Theme
    - rvest/Prettier ESLint
*/

{
    // Theme
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', 'MesloLGSDZ Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace",

    // General
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "workbench.editor.enablePreview": false,
    "workbench.list.openMode": "doubleClick",
    
    // Vim
    "vim": {
        /* Start requires Neovim installed */
        "enableNeovim": true,
        "neovimPath": "/usr/bin/nvim",
        "neovimUseConfigFile": true,
        "neovimConfigPath": "~/.config/VSCodium/User/init.vim",
        /* End requires Neovim installed */
        "easymotion": true,
        "surround": true,
        "incsearch": true,
        "useSystemClipboard": true,
        "useCtrlKeys": true,
        "hlsearch": true,
        "leader": ",",
        "highlightedyank.enable": true,
        "highlightedyank.duration": 500,
        "handleKeys": {
            "<C-a>": false,
            "<C-f>": false
        },
        "visualModeKeyBindings": [
            {
                "before": ["f"],
                "commands": [
                    "editor.action.formatSelection",
                    "extension.vim_escape",
                ],
            },
        ],
        "insertModeKeyBindings": [
            /*
            {
                "before": ["j", "j"],
                "after": ["<Esc>"]
            }
            */
        ],
        "normalModeKeyBindings": [
            /* Tab Navigation */
            // Next tab
            {
                "before": [ "t", "l" ],
                "commands": [
                    "workbench.action.nextEditor"
                ],
            },
            // Prev tab
            {
                "before": [ "t", "h" ],
                "commands": [
                    "workbench.action.previousEditor"
                ],
            },
            // Close tab
            {
                "before": [ "t", "d" ],
                "commands": [
                    "workbench.action.closeActiveEditor"
                ],
            },
            // Close all other tabs
            {
                "before": [ "t", "o" ],
                "commands": [
                    "workbench.action.closeOtherEditors"
                ],
            },
            // Reopen tab
            {
                "before": [ "t", "D" ],
                "commands": [
                    "workbench.action.reopenClosedEditor"
                ],
            },
            // New tab
            {
                "before": [ "t", "n" ],
                "commands": [
                    "workbench.action.files.newUntitledFile"
                ],
            },
            // Move tab left
            {
                "before": [ "t", "m", "h" ],
                "commands": [
                    "workbench.action.moveEditorLeftInGroup"
                ],
            },
            // Move tab right
            {
                "before": [ "t", "m", "l" ],
                "commands": [
                    "workbench.action.moveEditorRightInGroup"
                ],
            },
            // Split tab left
            {
                "before": [ "t", "t", "h" ],
                "commands": [
                    "workbench.action.moveEditorToLeftGroup"
                ],
            },
            // Split tab right
            {
                "before": [ "t", "t", "l" ],
                "commands": [
                    "workbench.action.moveEditorToRightGroup"
                ],
            },
            /* Split Navigation */
            {
                "before": [ "alt", "h" ],
                "commands": [
                    "workbench.action.focusLeftGroup"
                ],
            },
            {
                "before": [ "alt", "l" ],
                "commands": [
                    "workbench.action.focusRightGroup"
                ],
            },
            {
                "before": [ "alt", "k" ],
                "commands": [
                    "workbench.action.focusAboveGroup"
                ],
            },
            {
                "before": [ "alt", "j" ],
                "commands": [
                    "workbench.action.focusBelowGroup"
                ],
            },
        ],
        "normalModeKeyBindingsNonRecursive": [
            {
                "before": ["f"],
                "after": ["<leader>", "<leader>", "s"],
            },
            /* Examples */
            /*
            {
                "before": ["<leader>", "d"],
                "after": ["d", "d"]
            },
            {
                "before": ["<C-n>"],
                "commands": [":nohl"]
            },
            {
                "before": ["K"],
                "commands": ["lineBreakInsert"],
                "silent": true
            }
            */
        ],
    },
    
    // Zen mode
    "zenMode.fullScreen": false,
    "workbench.startupEditor": "none",
    "window.menuBarVisibility": "toggle",

    // TODOs
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.scss"
    ],
    "todohighlight.exclude": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**"
    ],
    "todohighlight.defaultStyle": {
        "color": "white",
        "backgroundColor": "#AC2C2C",
        "overviewRulerColor": "#ffab00",
        "cursor": "pointer",
        // "border": "1px solid #eee",
        "borderRadius": "3px",
        "isWholeLine": false,
    },
    "todohighlight.keywords": [
        {
            "text": "NOTE:",
            "backgroundColor": "#3E63AD",
        },
        {
            "text": "INFO:",
            "backgroundColor": "#3E63AD",
        },
        {
            "text": "TODO:",
            "color": "black",
            "backgroundColor": "yellow",
        },
        {
            "text": "BACKLOG:",
            "color": "black",
            "backgroundColor": "#BA9B2D",
        },
        {
            "text": "HACK:",
            "color": "black",
            "backgroundColor": "#BA9B2D",
        },
        {
            "text": "WARN:",
            "color": "black",
            "backgroundColor": "#BA9B2D",
        },
        {
            "text": "WARNING:",
            "color": "black",
            "backgroundColor": "#BA9B2D",
        },
        {
            "text": "FIXME:",
            "backgroundColor": "#AC2C2C",
        },
        "DEBUG:",
        "REVIEW:",
        "FIX:",
        "FIXIT:",
        "ISSUE:",
        "PERF:",
        "PERFORMANCE:",
        "OPTIM:",
        "OPTIMIZE:",
        "BUG:",
    ],

    // Formatters
    "[typescript]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "[javascript]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "[html]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "sync.removeExtensions": false,
    "sync.gist": "2ef28643353e62f278e9d02c511c86ca",

}